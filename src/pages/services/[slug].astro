---
import Base from '../../layouts/Base.astro';
import { SERVICES, SERVICE_SLUGS, type Service } from '../../data/services';

export const prerender = true; // static build

// Build all service pages (corporate, school-meals, private-events)
export function getStaticPaths() {
  return SERVICE_SLUGS.map((slug) => ({ params: { slug } }));
}

const slug = Astro.params.slug as Service['slug'];
const svc = SERVICES[slug];

// 404 if unknown
if (!svc) {
  Astro.response.status = 404;
}
---
<Base title={`MasterCaterer — ${svc ? svc.title : 'Service not found'}`} description={svc ? svc.tagline : ''}>
  {svc ? (
    <>
      <!-- Hero -->
      <section class="mx-auto max-w-6xl px-4 pt-10">
        <nav class="text-sm text-slate-500">
          <a href="/" class="link-underline">Home</a> <span>›</span>
          <a href="/services" class="link-underline">Services</a> <span>›</span>
          <span class="text-slate-700">{svc.title}</span>
        </nav>

        <div class="mt-4 grid gap-6 md:grid-cols-12 items-center">
          <div class="md:col-span-6">
            <h1 class="text-3xl md:text-4xl font-extrabold">{svc.title}</h1>
            <p class="mt-3 text-brand-deep">{svc.tagline}</p>
            <p class="mt-4 text-slate-600">{svc.description}</p>

            <div class="mt-6 flex flex-wrap gap-2">
              <a
                href={`/contact?service=${svc.slug}`}
                class="px-5 py-3 rounded-2xl bg-brand-primary text-white shadow-[var(--shadow-soft)] hover:translate-y-[-1px] transition"
              >
                {svc.ctaLabel ?? 'Get a quote'}
              </a>
              <a
                href="/gallery"
                class="px-5 py-3 rounded-2xl border border-brand-surface hover:shadow-[var(--shadow-soft)] transition"
              >
                View gallery
              </a>
            </div>
          </div>

          <div class="md:col-span-6">
            <div class="relative overflow-hidden rounded-2xl shadow-[var(--shadow-soft)]">
              <img src={svc.hero} alt={svc.alt} loading="lazy" class="w-full h-auto object-cover" />
            </div>
          </div>
        </div>
      </section>

      <!-- Highlights -->
      <section class="mx-auto max-w-6xl px-4 mt-10">
        <h2 class="text-xl font-semibold">What you get</h2>
        <ul class="mt-4 grid sm:grid-cols-2 lg:grid-cols-4 gap-4">
          {svc.highlights.map((h) => (
            <li class="rounded-2xl border border-brand-surface p-4 bg-white">{h}</li>
          ))}
        </ul>
      </section>

      <!-- Sample menu -->
      <section class="mx-auto max-w-6xl px-4 mt-10 mb-16">
        <h2 class="text-xl font-semibold">Sample menu</h2>
        <ul class="mt-4 grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
          {svc.sampleMenu.map((m) => (
            <li class="rounded-2xl border border-brand-surface p-4 bg-white">{m}</li>
          ))}
        </ul>

        <div class="mt-8">
          <a
            href={`/contact?service=${svc.slug}`}
            class="inline-block px-5 py-3 rounded-2xl bg-brand-primary text-white shadow-[var(--shadow-soft)] hover:translate-y-[-1px] transition"
          >
            {svc.ctaLabel ?? 'Get a quote'}
          </a>
        </div>
      </section>
    </>
  ) : (
    <main class="mx-auto max-w-6xl px-4 py-16">
      <h1 class="text-3xl font-extrabold">Service not found</h1>
      <p class="mt-2 text-slate-600">Try one of these:</p>
      <ul class="mt-4 list-disc pl-5">
        <li><a class="link-underline" href="/services/corporate">Corporate catering</a></li>
        <li><a class="link-underline" href="/services/school-meals">School meals</a></li>
        <li><a class="link-underline" href="/services/private-events">Private events</a></li>
      </ul>
    </main>
  )}
</Base>
