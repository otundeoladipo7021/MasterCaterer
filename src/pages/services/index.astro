---
import Base from '../../layouts/Base.astro';
import { SERVICES } from '../../data/services';
import { withBase } from '../../lib/path';
const items = Object.values(SERVICES);
---
<Base title="MasterCaterer — Services" description="Corporate catering, school meals, and private events.">
  <main class="mx-auto max-w-6xl px-4 py-10">
    <h1 class="text-3xl md:text-4xl font-extrabold">Services</h1>
    <p class="mt-2 text-slate-600">Choose a service to learn more.</p>

    <ul class="mt-8 grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {items.map((s) => (
        <li class="rounded-2xl bg-white border border-brand-surface overflow-hidden">
          <a href={withBase(`services/${s.slug}`)} class="block h-full">
            <div class="aspect-[4/3] overflow-hidden">
              <img src={s.hero} alt={s.alt} loading="lazy" class="w-full h-full object-cover" />
            </div>
            <div class="p-5">
              <h2 class="font-semibold text-lg">{s.title}</h2>
              <p class="mt-1 text-sm text-slate-600">{s.tagline}</p>
              <span class="mt-3 inline-flex items-center gap-2 text-brand-primary font-medium">
                View details <span aria-hidden>→</span>
              </span>
            </div>
          </a>
        </li>
      ))}
    </ul>
  </main>
</Base>
